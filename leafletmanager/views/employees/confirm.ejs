<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="formDiv">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 14%">
            <div id="form1">
                <a href="/employees" id="back">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do spisu pracowników
                </a>
                <h1 class="login">
                    Czy na pewno chcesz usunąć pracownika <%= employee.name %>
                </h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/employees/<%= employee._id %>?_method=DELETE" method="post">
                   
                    <input required type="submit" value="Tak" class="btn button btn-danger btn-red">
                   
                </form>
                <a href="/employees" class="btn button btn-dark btn-black">
                    Nie
                </a>
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>
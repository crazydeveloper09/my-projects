<%- include("../partials/header") %>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-4" id="side">
            <%- include("../partials/side") %>
        </div>
        <div class="col-lg-8 col-md-12">
            <h2 class="subpage-title text-center">
                Wyszukiwanie ogłoszeń dla typu <%= type.title %> po frazie <%= param %>: <%= announcements.length %>
             </h2>
            <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(announcements.length === 0){ %>
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="alert alert-info">
                            Nie znaleźliśmy ogłoszenia dla typu <%= type.title %> po frazie <%= param %>. Spróbuj ponownie
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <% announcements.forEach((announcement) => { %>
                        <div class="col-lg-6 col-sm-12" style="margin-top: 8px;">
                            <div class="card">
                                <img src="<%= announcement.profile %>" alt="zdjęcie ogłoszenia" class="card-img-top">
                                <div class="card-body">
                                    <div class="card-title"><%= announcement.title %></div>
                                    <span class="badge text-light border badge-mine"><%= announcement.category.title %></span>
                                    
                                    <p class="description">
                                        <% if(announcement.length < 200){ %>
                                            <%= announcement.description %>
                                        <% } else { %>
                                            <%= announcement.description.substring(0,200) %>...
                                        <% } %>
                                    
                                    </p>
                                    <div>
                                        <p class="float-left author-city"> <%= base64.decode(announcement.author.city) %></p>
                                        <p class="float-right price"> <%= announcement.price %>zł</p>
                                    </div>
                                    <div style="clear: both;">
                                        <a href="/announcements/<%= announcement.link %>?announcement_id=<%= announcement._id %>" class="btn button-small btn-success">Czytaj więcej</a>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
    
       
    <script>
        $("#announcementsLaptop").addClass("active");
        $("#announcementsMobile").css("border-bottom", "3px solid white")
    </script>
   
</div>
<%- include("../partials/footer") %>

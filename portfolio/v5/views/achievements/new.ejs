<% include ../partials/headera %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 10%">
            <div id="form1">
                <a href="/about">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony O mnie
                </a>
                <h1 class="login">Dodaj osiągnięcie dla użytkownika <%= user.username %></h1>
                <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <form action="/about/<%= user._id %>/achievements" method="post" enctype="multipart/form-data">
                    <p class="username">
                        Tytuł osiągnięcia
                    </p>
                    <input type="text" name="title" placeholder="Tytuł osiagnięcia" class="form-control">
                    <br>
                    <p class="username">
                        Tytuł osiągnięcia po angielsku
                    </p>
                    <input type="text" name="titleEn" placeholder="Tytuł osiagnięcia angielski" class="form-control">
                    <br>
                    <p class="username">
                        Zdjęcie osiągnięcia
                    </p>
                    <input type="file" name="picture" style="color:#c9c7c7">
                    <br>
                    <br>
                    <input type="submit" value="Dodaj osiągnięcie" class="btn btn-primary button">
                </form>
            </div>
        </div>

    </div>
</div>
</body>
</html>
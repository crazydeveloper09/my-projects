<% include ../partials/headera %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 17%">
			<div id="form1">
				<a href="/">
					<i class="fas fa-arrow-left"></i>
					Wróć do strony głównej
				</a>
				<h1 class="login">Edytuj ogłoszenie</h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                    <form action="/announcements/<%= announcement._id %>?_method=PUT" method="post">
                        <p class="username">Edytuj treść ogłoszenia po polsku</p>
                        <textarea name="announcement[pl]" id="polish" class="form-control" placeholder="Polski"><%= announcement.pl %></textarea>
                        <br>
                        <p class="username">Edytuj treść ogłoszenia po angielsku</p>
                        <textarea name="announcement[en]" id="english" class="form-control" placeholder="Angielski"><%= announcement.en %></textarea>
                        <br>
                        <input type="submit" value="Edytuj ogłoszenie" class="btn btn-primary button">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


</body>
</html>
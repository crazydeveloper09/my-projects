<% include ../partials/header %>

<br>
<br>
<br>
<br>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="text-center" id="subpageTitle"><%= language.__("Projekty dla parametru") %>: <%= type %></h1>
                <div class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-primary button-small dropdown-toggle justify-content-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <%= language.__("Wybierz inną kategorię") %>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background: #dddddd">
                          
                            <% if(type === "not-ended"){ %>
                              <a class="dropdown-item active" href= "/projects/type/not-ended"><%= language.__("Nieskończone") %></a>
                              <a class="dropdown-item" href= "/projects/type/awaiting"><%= language.__("Oczekujące") %></a>
                              <a class="dropdown-item" href= "/projects/type/done"><%= language.__("Skończone") %></a>
                            <% } else if(type==="awaiting"){ %>
                              <a class="dropdown-item" href= "/projects/type/not-ended"><%= language.__("Nieskończone") %></a>
                              <a class="dropdown-item active" href= "/projects/type/awaiting"><%= language.__("Oczekujące") %></a>
                              <a class="dropdown-item" href= "/projects/type/done"><%= language.__("Skończone") %></a>
                            <% } else if(type==="done"){ %>
                              <a class="dropdown-item" href= "/projects/type/not-ended"><%= language.__("Nieskończone") %></a>
                              <a class="dropdown-item" href= "/projects/type/awaiting"><%= language.__("Oczekujące") %></a>
                              <a class="dropdown-item active" href= "/projects/type/done"><%= language.__("Skończone") %></a>
                            <% } %>
                             
                          
                          
                          
                            
                        </div>
                      </div>
                </div>
                <br>
            </div>
        </div>
            <div class="row">
                <% if(projects.length===0){ %>
                    <div class="col-lg-12">
                        <div class="alert alert-danger">
                            <%= language.__("Nie mam dostępnych projektów dla parametru") %>: <%= type %>
                        </div>
                    </div>
                <% } else { %>
                    <% for(let i=projects.length-1; i>=0; i--){ %>
                        <div class="col-lg-4 col-md-12" style="margin-top: 8px">
                            <div class="card">
                                <% if(projects[i].link !== 'undefined'){ %>
                                   
                                    <a href="<%= projects[i].link %>"><img src="<%= projects[i].profile %>" alt="Strona" class="card-img-top"></a>
                               
                            <% } else { %>
                                    <img src="<%= projects[i].profile %>" alt="Strona" class="card-img-top">
                            <% } %>
                            
                            
                            
                            <div class="card-body">
                                <div class="card-title">
                                    <a href="/projects/<%= projects[i].subpageLink %>" id="name"><%= projects[i].title %></a>
                                    <% if(projects[i].type === "not-ended"){ %>
                                        <h5>
                                            <span class="badge badge-danger text-danger border border-danger" style="background:none"><%= language.__(projects[i].type) %></span>
                                        </h5>
                                    
                                    <% } else if(projects[i].type === "awaiting"){ %>
                                        <h5>
                                            <span class="badge badge-warning text-warning border border-warning" style="background:none"><%= language.__(projects[i].type) %></span>
                                        </h5>
                                    <% } else if(projects[i].type === "done"){ %>
                                        <h5>
                                            <span class="badge badge-success text-success border border-success" style="background:none"><%= language.__(projects[i].type) %></span>
                                        </h5>
                                    <% } %>
                                    
                                </div>
                                
                                    <% if(lang==="pl"){ %>
                                         <p class="normal"><%- projects[i].description.substring(0,200) %>...</p>
                                    <% } else { %>
                                         <p class="normal"><%- projects[i].en.substring(0,200) %>...</p>
                                    <% } %>
                                    <a href="/projects/<%= projects[i].subpageLink %>" class="btn btn-primary button-small"><%= language.__("Czytaj więcej") %></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
                
                   
            </div>
           
       
    </div>

<% include ../partials/footer %>
<script>
    axios
        .get("/api/user")
        .then((response) => {
            let contact = document.getElementById("contact");
            let facebookLink = document.createElement("a");
            let instagramLink = document.createElement("a");
            let emailLink = document.createElement("a");
            let newPageLink = document.createElement("a");
            let facebookIcon = document.createElement("i");
            let instagramIcon = document.createElement("i");
            let emailIcon = document.createElement("i");
            let newPageIcon = document.createElement("i");
            facebookLink.style.color = "white";
            facebookLink.setAttribute("href", response.data.fbLink);
            facebookIcon.setAttribute("class", "fab fa-facebook fa-2x icon");
            facebookLink.appendChild(facebookIcon);
            contact.appendChild(facebookLink);

            instagramLink.style.color = "white";
            instagramLink.setAttribute("href", response.data.igLink);
            instagramIcon.setAttribute("class", "fab fa-instagram fa-2x icon");
            instagramLink.appendChild(instagramIcon);
            contact.appendChild(instagramLink);

            emailLink.style.color = "white";
            emailLink.setAttribute("href", `mailto:${response.data.email}`);
            emailIcon.setAttribute("class", "fas fa-envelope fa-2x icon");
            emailLink.appendChild(emailIcon);
            contact.appendChild(emailLink);

            newPageLink.style.color = "white";
            newPageLink.setAttribute("href", "https://mkdportfolio.herokuapp.com/website-orders/new");
            newPageIcon.setAttribute("class", "fas fa-pen fa-2x icon");
            newPageLink.appendChild(newPageIcon);
            contact.appendChild(newPageLink);
            
            
        })
        .catch((err) => {

        })
</script>


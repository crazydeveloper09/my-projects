<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 20%">
			<div id="form1">
				<a href="/projects/<%= project.subpageLink %>">
					<i class="fas fa-arrow-left"></i>
					Wróć do strony projektu <%= project.title %>
				</a>
				<h1 class="login">Dodaj zdjęcie do  galerii projektu <%= project.title %></h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                     <form action="/projects/<%= project._id %>/new/picture" method="post" enctype="multipart/form-data" id="form">
                       
                         <p class="username">
                             Wybierz zdjęcie
                         </p>
                        <input type="file" name="picture" required>
                        <br>
                        <br>
                        <input type="submit" value="Dodaj zdjęcie do projektu" class="btn btn-danger button" id="send">
                    </form>
                </div>
            </div>
           
        </div>
    </div>
</div>
<script>
    document.getElementById("form").addEventListener("submit", function(){
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").innerText = `Dodawanie...`;
    })
</script>   
</body>
</html>
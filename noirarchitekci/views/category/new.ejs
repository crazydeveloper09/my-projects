<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 10%">
			<div id="form1">
				<a href="/">
					<i class="fas fa-arrow-left"></i>
					Wróć do strony głównej
				</a>
				<h1 class="login">Dodaj kategorię</h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                    <form action="/projects/category" method="post" id="form">
                        
                        <div class="form-floating mb-3">
                       
                            <input type="text" id="name" name="name" class="form-control" placeholder="Nazwa">
                            <label for="name" class="username">
                                Nazwa
                                
                            </label>
                            
                        </div>
                       
                        
                        <div class="form-floating mb-3">
                       
                            <textarea name="important" id="important" class="form-control"></textarea>
                            <label for="important" class="username">
                                Opis (ten większy)
                                
                            </label>
                            
                        </div>
                      
							<div class="form-floating mb-3">
                       
                                <textarea name="info" id="info1" class="form-control"></textarea>
                                <label for="info" class="username">
                                   Opis (ten normalny)
                                    
                                </label>
                                
                            </div>
                            
							
                        <input type="submit" value="Dodaj kategorię" class="btn btn-danger button" id="send">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("form").addEventListener("submit", function(){
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").innerText = `Dodawanie...`;
    })
</script>   
</body>
</html>
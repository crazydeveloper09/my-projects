<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 20%">
			<div id="form1">
				<a href="/#about">
					<i class="fas fa-arrow-left"></i>
					Wróć do sekcji o nas
				</a>
				<h1 class="login">Edytuj zdjęcie profilowe <%= user.username %></h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                     <form action="/user/<%= user._id %>/edit/picture" method="post" enctype="multipart/form-data" id="form">
                        
                        <p class="username">
                            Wybierz zdjęcie
                         </p>
                        <input type="file" name="picture" required>
                        <br>
                        <br>
                        <input type="submit" value="Edytuj zdjęcie profilowe" class="btn btn-danger button" id="send">
                    </form>
                </div>
            </div>
           
        </div>
    </div>
</div>
</body>
<script>
    document.getElementById("form").addEventListener("submit", function(){
        document.getElementById("send").setAttribute("disabled", "disabled");
        document.getElementById("send").innerText = `Edytowanie...`;
    })
</script>   
</html>
